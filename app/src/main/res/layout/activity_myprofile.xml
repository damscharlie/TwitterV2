<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activty_myprofile_profileImageIV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/activity_myprofile_usernameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/activty_myprofile_profileImageIV"
        android:text="User Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/activity_myprofile_userEmailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_myprofile_usernameTV"
        android:layout_toEndOf="@+id/activty_myprofile_profileImageIV"
        android:text="User E-mail"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#707070"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/activity_myprofile_listViewLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activty_myprofile_profileImageIV"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/activity_myprofile_followersTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_myprofile_userEmailTV"
        android:layout_alignEnd="@+id/activity_myprofile_listViewLV"
        android:layout_alignTop="@+id/activty_myprofile_profileImageIV"
        android:text="followers"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/activity_myprofile_followersNumberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity_myprofile_userEmailTV"
        android:layout_alignEnd="@+id/activity_myprofile_followersTV"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>