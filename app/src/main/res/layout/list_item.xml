<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/user_profile_picture_iv"
        android:text="@string/username"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/screen_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_tv"
        android:layout_toEndOf="@+id/user_profile_picture_iv"
        android:text="@string/screenname"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/status_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_profile_picture_iv"
        android:text="@string/statustext"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/abc_text_size_small_material"
        />

    <ImageView
        android:id="@+id/status_image_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_text_tv" />

    <Button
        android:id="@+id/reply_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/status_image_iv" />
    <Button
        android:id="@+id/retweet_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/status_image_iv"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/favorites_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/retweet_btn" />

    <ImageView
        android:id="@+id/user_profile_picture_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>